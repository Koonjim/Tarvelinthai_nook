@model IEnumerable<Travelinthai.Models.Location_tb>
@* *@
<a href="/Account/Login" class="btn btn-info">Logout</a>
<div class="container">
    <div class="row">
        @foreach (var location in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <img src="@location.Img" class="card-img-top" alt="@location.LocationName" style="height:200px;object-fit:cover" />
                    <div class="card-body">
                        <h2 class="card-title">@location.LocationName</h2>
                        <h3 class="card-text">@location.Details</h3>
                        <h5 class="card-text">
                            <strong>Category ID:</strong> @location.TypeID<br />
                            <strong>Category Name:</strong> @location.Type?.TypeName
                        </h5>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">Author @location.Province</small>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
