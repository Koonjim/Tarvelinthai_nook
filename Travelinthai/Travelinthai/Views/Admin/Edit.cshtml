@model Location_tb;
@{
    ViewData["Title"] = "Edit";
}
<h1 class="text-center">แก้ไขข้อมูล</h1>
<div class="row">
    
    <form method="post" asp-controller="Admin" asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="LocationID" />
        <input type="hidden" asp-for="TypeID" />
        
      <div class="form-group">
          <label asp-for="LocationName"></label>
          <input type="text" asp-for="LocationName" class="form-control"/>
          <span asp-validation-for="LocationName" class="text-danger"></span>
      </div>
      <div class="form-group">
            <label asp-for="Details"></label>
            <input type="text" asp-for="Details" class="form-control" />
            <span asp-validation-for="Details" class="text-danger"></span>
      </div>
      <div class="form-group">
            <label asp-for="Img"></label>
            <input type="text" asp-for="Img" class="form-control" />
            <span asp-validation-for="Img" class="text-danger"></span>
      </div>
      <div class="form-group">
            <label asp-for="Province"></label>
            <input type="text" asp-for="Province" class="form-control" />
            <span asp-validation-for="Province" class="text-danger"></span>
      </div> 

      <button type="submit" class="btn btn-primary my-2">อัพเดท</button>

  </form>
    
</div>